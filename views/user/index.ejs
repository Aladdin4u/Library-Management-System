<section id="home" class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <img src="/image/profile/<%=user.image || "profile.png"%>" class="card-img-top p-1" alt="...">
          <div class="card-body">
            <p>Name : <%=user.firstName%> <%=user.lastName%></p>
            <p>Email : <%=user.email%></p>
            <p>Book Issued : <%=user.bookIssueInfo.length%></p>
            <p>Due : $<%=user.fines%></p>
            <p>Flagged : <%=user.violationFlag%></p>
            <p>Joined : <%=user.joined.toDateString() %></p>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        
        <div class="card">
          <div class="card-header text-center">
            <h4>Recent Activities</h4>
          </div>
          <table class="table table-striped">
            <thead class="thead-inverse">
              <tr>
                <th>Info</th>
                <th>Category</th>
                <th>Date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
               <% activity.forEach(log => { %>
                <% if(log.category == 'Issue') { %>
                     <tr>
                        <td>You have issued <%=log.info.title%></td></td>
                        <td><%=log.category%></td>
                        <td>
                          <p>Issue :  <%=log.time.issueDate.toDateString()%></p>
                          <p>Return :  <%=log.time.returnDate.toDateString()%></p>
                          </td>
                        <td>
                         <a href="/books/return-renew" class="btn btn-sm btn-warning" role="button">Return/Renew</a>
                        </td>
                      </tr>  
               <%  } else if(log.category == 'Return') { %>
                      <tr>
                          <td>You have returned <%=log.info.title%></td></td>
                          <td><%=log.category%></td>
                          <td>
                            <p>Issue :  <%=log.time.issueDate.toDateString()%></p>
                            <p>Return :  <%=log.time.returnDate.toDateString()%></p>
                            </td>
                          <td>
                            <a href="/books/return-renew" class="btn btn-sm btn-success disabled" role="button" aria-disabled="true">Returned Successfully!</a>
                          </td>
                      </tr>
                 <%  } else if(log.category == 'Comment') { %>
                        <tr>
                          <td>You commented on <%=log.info.title%></td>
                          <td><%= log.category %></td>
                          <td>NULL</td>
                          <td><a href="/books/details/<%=log.info.id%>" class="btn btn-sm btn-secondary">
                            <i class="fa fa-angle-double-right"></i> Details
                          </a></td>
                        </tr>
                 <%  } else if(log.category == 'Fine') {%>
                         <tr>
                          <td>You paid $<%=log.fine.amount%> fines</td>
                          <td><%=log.category%></td>
                          <td><%=log.fine.date%></td>
                          <td>
                            <button class="btn btn-sm btn-secondary">
                              <i class="fa fa-check"></i> Paid Successfully
                            </button>
                          </td>
                        </tr>
                  <%  } else if(log.category == 'Renew') { %>
                           <tr>
                              <td>You have renewed <%=log.info.title%></td></td>
                              <td><%=log.category%></td>
                              <td>
                                <p>Issue :  <%=log.time.issueDate.toDateString()%></p>
                                <p>Return :  <%=log.time.returnDate.toDateString()%></p>
                                </td>
                              <td>
                                <a href="/books/return-renew" class="btn btn-sm btn-info" role="button">Return</a>
                              </td>
                          </tr>
                  <% } else if(log.category == 'Update Profile') { %>
                            <tr>
                              <td>You have recently updated your profile info</td></td>
                              <td><%=log.category%></td>
                              <td>
                                <%=log.entryTime.toDateString()%>
                                </td>
                              <td>
                                <a href="/user/1/profile" class="btn btn-sm btn-success" role="button">Visit Profile</a>
                              </td>
                          </tr>
                  <% } else if(log.category == 'Update Password') { %>
                            <tr>
                              <td>You have recently updated your password</td></td>
                              <td><%=log.category%></td>
                              <td>
                                <%=log.entryTime.toDateString()%>
                                </td>
                              <td>
                                <button class="btn btn-sm btn-success">Changed Successfully!</button>
                              </td>
                          </tr>
                  <% } else if(log.category == 'Update/Upload Photo') { %>
                            <tr>
                              <td>You have recently updated your profile picture</td></td>
                              <td><%=log.category%></td>
                              <td>
                                <%=log.entryTime.toDateString()%>
                                </td>
                              <td>
                                <button class="btn btn-sm btn-success">Changed Successfully!</button>
                              </td>
                          </tr>
                  <% } %>
            <% }); %>
              
            </tbody>
          </table>
          
           <% if (pages > 0) { %>
        <nav class="ml-3 mb-2">
          <ul class="pagination offset-md-3">
            
            <% if (current == 1) { %>
              <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
              <li class="page-item"><a href="/user/1" class="page-link">First</a></li>
            <% } %>
            
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/user/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a href="/user/<%= pages %>" class="page-link">Last</a></li>
                    <% } %>
          </ul>
        </nav>
     <% } %>
          
          
          <!--<nav class="ml-3">-->
          <!--  <ul class="pagination offset-md-4">-->
          <!--    <li class="page-item disabled"><a href="#" class="page-link"><i class="fa fa-angle-double-left"></i> Previous</a></li>-->
          <!--    <li class="page-item active"><a href="#" class="page-link">1</a></li>-->
          <!--    <li class="page-item"><a href="#" class="page-link">2</a></li>-->
          <!--    <li class="page-item"><a href="#" class="page-link">3</a></li>-->
          <!--    <li class="page-item"><a href="#" class="page-link">Next <i class="fa fa-angle-double-right"></i></a></li>-->
          <!--  </ul>-->
          <!--</nav>-->
          
        </div>
      </div>
    </div>
  </div>
</section>

<!--PAY FINE MODAL-->
<div class="modal fade" id="payFineModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="payFineModalLabel">
          Pay fines
        </h5>
        <button class="close" data-dismiss="modal" ><span>&times;</span></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="title" class="form-control-label">Enter amount </label>
            <input type="number" min="1" placeholder="Less than $1 is not valid payment" class="form-control">
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button class="btn btn-danger" data-dismiss="modal">Pay</button>
      </div>
    </div>
  </div>
</div>

