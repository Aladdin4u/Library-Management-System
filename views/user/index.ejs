<!--PAY FINE MODAL-->
<div class="modal fade" id="payFineModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="payFineModalLabel">
          Pay fines
        </h5>
        <button class="close" data-dismiss="modal" ><span>&times;</span></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="title" class="form-control-label">Enter amount </label>
            <input type="number" min="1" placeholder="Less than $1 is not valid payment" class="form-control">
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button class="btn btn-danger" data-dismiss="modal">Pay</button>
      </div>
    </div>
  </div>
</div>

